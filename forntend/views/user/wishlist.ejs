<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Wishlist</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container mt-5">
  <h2 class="mb-4">ðŸ›’ My Wishlist</h2>

  <% if (products.length === 0) { %>
    <div class="alert alert-info">Your cart is empty.</div>
  <% } else { %>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% products.forEach(product => { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <% if (product.image) { %>
              <img src="<%= product.image %>" class="card-img-top" alt="Product image">
            <% } else { %>
              <img src="/default-product.jpg" class="card-img-top" alt="Product image">
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= product.title %></h5>
              <p class="card-text"><%= product.description %></p>
              <p class="card-text fw-bold text-success">â‚¹ <%= product.price %></p>
            </div>
            <div class="card-footer text-center">
              <form action="/users/remove-wishlist" method="POST">
                <input type="hidden" name="wishlist_id" value="<%= product.wishlist_id %>">
                <button class="btn btn-danger btn-sm">Remove from Cart</button>
              </form>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } %>
</div>

</body>
</html>
